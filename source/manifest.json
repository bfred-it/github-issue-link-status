{
  "name": "GitHub Issue Link Status",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Colorize issue and PR links to see their status (open, closed, merged)",
  "author": "Federico Brigante",
  "homepage_url": "https://github.com/bfred-it/github-issue-link-status",
  "icons": {
    "128": "icon.png"
  },
  "applications": {
    "gecko": {
      "id": "issue-link-status@bfred.it",
      "strict_min_version": "52.0"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "api.github.com*"
  ],
  "optional_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "content_scripts":[
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ]
}